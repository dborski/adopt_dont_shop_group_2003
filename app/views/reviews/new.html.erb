<div class="container">
  <div class="row">
    <div class="col-12 center">
      <h1><%= "Add New Review for #{@current_shelter.name}" %></h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 left">
      <%= form_tag "/shelters/#{@current_shelter.id}" do %>
      <%= label_tag "Title:" %>
      <%= text_field_tag :title %><br>
      <%= label_tag "Image URL:" %>
      <%= text_field_tag :img_url, :default => "http://www.amandaspetcare.com/services/pet-sitting/dog-cat-grass.jpg" %><br>
      <%= label_tag "Rating (1-10):" %>
      <%= text_field_tag :rating %><br>
      <%= label_tag "Content:" %>
      <%= text_field_tag :content%><br>
      <%= submit_tag "Submit" %>
    <% end %>
    </div>
  </div>
</div>
