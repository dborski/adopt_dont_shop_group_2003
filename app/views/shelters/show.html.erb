<div class="container">
  <div class="row">
    <div class="col-12 center">
      <h1><%= @shelter.name %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 center">
      <h3>Address</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-3 center">
      <p><%= @shelter.address %></p>
    </div>
    <div class="col-3 center">
      <p><%= @shelter.city %></p>
    </div>
    <div class="col-3 center">
      <p><%= @shelter.state %></p>
    </div>
    <div class="col-3 center">
      <p><%= @shelter.zip %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-6 center">
      <%= link_to "Update Shelter", "/shelters/#{@shelter.id}/edit" %>
    </div>
    <div class="col-6 center">
      <section id="shelter-<%= @shelter.id %>">
        <% if !@shelter.pets.pets_with_approved_apps.empty? && !@shelter.pets.pets_with_pending_status.empty? %>
        <% else %>
        <%= button_to "Delete Shelter", "/shelters/#{@shelter.id}", method: :delete %><br>
        <% end %>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-12 center">
      <h2><%= link_to "See our pets", "/shelters/#{@shelter.id}/pets"%></h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 center">
      <h3><%= link_to "New Review", "/shelters/#{@shelter.id}/reviews/new"%></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12 center">
      <h3> Reviews </h3>
    </div>
  </div>

  <div class="row">
    <% @shelter.reviews.each do |review| %>
    <div class="col-4 center">
      <section class="review-<%=review.id %>">
        <p><%= review.title %></p>
        <p><%= review.rating %></p>
        <p><%= review.content %></p>
        <% if review.img_url != "" %>
        <img src=<%= "#{review.img_url}" %> alt=<%= "#{review.id}" %> height="100" width="100">
        <% end %>
        <h4><%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit"%></h4>
        <h4><%= link_to "Delete Review", "/shelters/#{@shelter.id}/reviews/#{review.id}", method: :delete%></h4>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 center">
      <h3>Shelter Statitistics</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4 center">
      <section class="shelter-count">
        <p>Number of Pets at Shelter: <%= @shelter.pets.count_of_pets %></p>
      </section>
    </div>
    <div class="col-4 center">
      <section class="shelter-average">
        <% if @shelter.reviews.empty? %>
        <p>Average Review Rating: 0 </p>
        <% else %>
        <p>Average Review Rating: <%= @shelter.reviews.average_rating.round(2) %></p>
        <% end %>
      </section>
    </div>
    <div class="col-4 center">
      <section class="shelter-apps">
        <p>Number of Applications on File: <%= @shelter.pets.number_of_apps %></p>
      </section>
    </div>
  </div>
</div>